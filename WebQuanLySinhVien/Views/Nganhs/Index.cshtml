@model IEnumerable<WebQuanLySinhVien.Models.Nganh>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách ngành</h1>

<p>
    <button class="btn btn-primary create-btn">Tạo mới</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNganh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaKhoaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNganh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhoaNavigation.MaKhoa)
            </td>
            <td>
                <button class="btn btn-primary edit-btn" data-id="@item.MaNganh">Sửa</button>
                <button class="btn btn-primary"><a asp-action="Details" asp-route-id="@item.MaNganh">Chi tiết</a></button>
                <button class="btn btn-danger delete-btn" data-id="@item.MaNganh">Xóa</button>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function() {
        // Xử lý sửa
        $('.edit-btn').click(function() {
            var id = $(this).data('id');
            $.get(`/Nganhs/Edit/${id}`, function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Sửa thông tin');
                $('#actionModal').modal('show');
            });
        });

        // Xử lý nút Create
        $('.create-btn').click(function() {
            $.get('/Nganhs/Create', function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Thêm mới');
                $('#actionModal').modal('show');
            });
        });

        // Xử lý xóa
        $('.delete-btn').click(function() {
            var id = $(this).data('id');
            $.get(`/Nganhs/Delete/${id}`, function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Xác nhận xóa');
                $('#actionModal').modal('show');
            });
        });
    });
</script>