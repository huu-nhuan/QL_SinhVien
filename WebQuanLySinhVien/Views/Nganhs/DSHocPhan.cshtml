@model IEnumerable<WebQuanLySinhVien.Models.Hocphan>

@{
    ViewData["Title"] = "Danh sách học phần";
}

<h1>Các học phần của ngành @ViewData["TenNganh"]</h1>

<p>
    <button class="btn btn-primary create-btn">Tạo mới</button>
</p>
<div class="row">
    <div class="col-md-6">
        <form class="d-flex align-items-center" asp-action="DSHocPhan" asp-controller="Nganhs" asp-route-manganh="@ViewData["MaNganh"]">
            <div class="row">
                <div class="col-md-8">
                    <input name="searchString" class="form-control me-1" type="search" placeholder="Tìm kiếm" aria-label="Tìm kiếm" value="@ViewData["searchString"]" />
                </div>
                <div class="col-md-4">
                    <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <a asp-action="DSHocPhan" asp-controller="Nganhs" asp-route-manganh="@ViewData["MaNganh"]">Xem danh sách đầy đủ</a>
    </div>
</div>
<div class="content table-responsive table-full-width">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenHp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoTc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HocKy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaNganhNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenHp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoTc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HocKy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNganhNavigation.MaNganh)
                    </td>
                    <td>
                        <button class="btn btn-primary edit-btn" data-id="@item.MaHp">Sửa</button>
                        <button class="btn btn-primary"><a asp-action="Details" asp-route-id="@item.MaHp">Chi tiết</a></button>
                        <button class="btn btn-danger delete-btn" data-id="@item.MaHp">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="fixed-table-pagination">
    <div class="pull-left pagination-detail">
        <span class="pagination-info">
            Hiển thị @((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) đến @Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalItems)
        </span>
        <span class="page-list">
            <span class="btn-group dropup">
                <button type="button" class="btn btn-outline dropdown-toggle" data-toggle="dropdown">
                    <span class="page-size">@ViewBag.PageSize</span>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    @{
                        var pageSizes = new[] { 5, 10, 25, 50 };
                        foreach (var size in pageSizes)
                        {
                            <li class="@(size == ViewBag.PageSize ? "active" : "")">
                                <a href="@Url.Action("DSHocPhan", new {
                                    page = 1,
                                    pageSize = size,
                                    searchString = ViewData["searchString"],
                                    manganh = ViewData["MaNganh"]
                                })">@size</a>
                            </li>
                        }
                    }
                </ul>
            </span> dòng/trang
        </span>
    </div>
    <div class="pull-right pagination">
        <ul class="pagination">
            @{
                int currentPage = ViewBag.CurrentPage;
                int totalPages = ViewBag.TotalPages;
                string searchString = ViewData["searchString"]?.ToString();

                // Nút đầu trang
                <li class="page-first @(currentPage == 1 ? "disabled" : "")">
                    <a href="@Url.Action("DSHocPhan", new {
                        page = 1,
                        pageSize = ViewBag.PageSize,
                        searchString = searchString,
                        manganh = ViewData["MaNganh"]
                    })">«</a>
                </li>

                // Nút trang trước
                <li class="page-pre @(currentPage == 1 ? "disabled" : "")">
                    <a href="@Url.Action("DSHocPhan", new {
                        page = currentPage - 1,
                        pageSize = ViewBag.PageSize,
                        searchString = searchString,
                        manganh = ViewData["MaNganh"]
                    })">‹</a>
                </li>

                // Các nút trang
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(totalPages, currentPage + 2);

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-number @(i == currentPage ? "active" : "")">
                        <a href="@Url.Action("DSHocPhan", new {
                            page = i,
                            pageSize = ViewBag.PageSize,
                            searchString = searchString,
                            manganh = ViewData["MaNganh"]
                        })">@i</a>
                    </li>
                }

                // Nút trang sau
                <li class="page-next @(currentPage == totalPages ? "disabled" : "")">
                    <a href="@Url.Action("DSHocPhan", new {
                        page = currentPage + 1,
                        pageSize = ViewBag.PageSize,
                        searchString = searchString,
                        manganh = ViewData["MaNganh"]
                    })">›</a>
                </li>

                // Nút cuối trang
                <li class="page-last @(currentPage == totalPages ? "disabled" : "")">
                    <a href="@Url.Action("DSHocPhan", new {
                        page = totalPages,
                        pageSize = ViewBag.PageSize,
                        searchString = searchString,
                        manganh = ViewData["MaNganh"]
                    })">»</a>
                </li>
            }
        </ul>
    </div>
</div>


<script>
    $(document).ready(function() {
        // Xử lý sửa
        $('.edit-btn').click(function() {
            var id = $(this).data('id');
            $.get(`/Hocphans/Edit/${id}`, function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Sửa thông tin');
                $('#actionModal').modal('show');
            });
        });

        // Xử lý nút Create
        $('.create-btn').click(function() {
            $.get('/Hocphans/Create', function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Thêm mới');
                $('#actionModal').modal('show');
            });
        });

        // Xử lý xóa
        $('.delete-btn').click(function() {
            var id = $(this).data('id');
            $.get(`/Hocphans/Delete/${id}`, function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Xác nhận xóa');
                $('#actionModal').modal('show');
            });
        });
    });
</script>