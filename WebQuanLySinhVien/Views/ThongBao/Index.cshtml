@model WebQuanLySinhVien.Models.ViewModels.Mail_Infor
@{
    ViewData["Title"] = "Gửi thông báo";
}

@if (ViewData["Message"] != null)
{
    <script>
        swal("Thông báo", @Html.Raw(Json.Serialize(ViewData["Message"])), "success");
    </script>
}
@if (ViewData["ThongBao"] != null)
{
    <script>
        swal("Thông báo", @Html.Raw(Json.Serialize(ViewData["ThongBao"])), "error");
    </script>
}

<div class="col-md-8">
    <div class="card">
        <div class="header">
            <h4 class="title">Gửi thông báo</h4>
        </div>
        <div class="content">
            <form asp-action="Index" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Mã số</label>
                            <select asp-for="selectedIDLop" class="form-control" id="userSelect">
                                <option value="">-- Chọn ID --</option>
                                @foreach (var id in Model.DanhSachLop)
                                {
                                    <option value="@id" selected="@(Model.selectedIDLop == id ? "selected" : null)">
                                        @id
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="TieuDe">Tiêu đề</label>
                            <input asp-for="TieuDe" type="text" class="form-control" placeholder="Tiêu đề">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="NoiDung">Nội dung</label>
                            <textarea asp-for="NoiDung" rows="5" class="form-control" placeholder=""></textarea>
                        </div>
                    </div>
                </div>

                <!-- input chọn file -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="TepDinhKem">File đính kèm (tùy chọn)</label>
                            <input type="file" name="TepDinhKem" class="form-control" />
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-info btn-fill pull-right">Gửi</button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>
