        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenDangNhap)
                </td>
                <td>
                    <span class="password-hidden" id="@item.IdTk">@item.MatKhau</span>
                    @* <span class="password-plain d-none">@item.MatKhau</span> *@
