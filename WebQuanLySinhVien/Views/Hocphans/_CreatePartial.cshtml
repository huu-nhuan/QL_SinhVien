@model WebQuanLySinhVien.Models.Hocphan
@{
    Layout = null;
}
<h4>Học phần</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form id="createForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaHp" class="control-label"></label>
                <input asp-for="MaHp" class="form-control" />
                <span asp-validation-for="MaHp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenHp" class="control-label"></label>
                <input asp-for="TenHp" class="form-control" />
                <span asp-validation-for="TenHp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoTc" class="control-label"></label>
                <input asp-for="SoTc" class="form-control" />
                <span asp-validation-for="SoTc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNganh" class="control-label"></label>
                <select asp-for="MaNganh" class="form-control" asp-items="ViewBag.MaNganh"></select>
            </div>
            <div class="form-group">
                <label asp-for="HocKy" class="control-label"></label>
                <input asp-for="HocKy" type="number" min="1" class="form-control" />
                <span asp-validation-for="HocKy" class="text-danger"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
        </form>
    </div>
</div>

<script>
    // Xử lý submit form bằng AJAX
    $('#createForm').submit(function(e) {
        e.preventDefault();
        $.post($(this).attr('action'), $(this).serialize(), function(data) {
            if (data.success) {
                $('#actionModal').modal('hide');
                swal("Thành công", data.message, "success")
                    .then(() => location.reload()); // Reload trang sau khi tạo
            }else {
                swal({
                    title: "Lỗi!",
                    text: data.message,
                    icon: "error"
                })
                //$('#modalBody').html(response); // Hiển thị lại form nếu có lỗi
            }
            console.log(data);
        });
    });
</script>