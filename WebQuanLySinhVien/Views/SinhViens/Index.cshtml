@model IEnumerable<WebQuanLySinhVien.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách sinh viên</h1>

<p>
    <button class="btn btn-primary create-btn">Tạo mới</button>
</p>
<div class="row">
    <div class="col-md-6">
        <form class="d-flex align-items-center" asp-action="Index" asp-controller="SinhViens">
            <div class="form-check form-check-radio">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="searchBy" value="ten"
                    @(ViewData["searchBy"]?.ToString() == "ten" || string.IsNullOrEmpty(ViewData["searchBy"]?.ToString()) ? "checked" : "")>
                    <span class="form-check-sign"></span>
                    Tìm theo tên
                </label>
            </div>
            <div class="form-check form-check-radio">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="searchBy" value="gt"
                    @(ViewData["searchBy"]?.ToString() == "gt" ? "checked" : "")>
                    <span class="form-check-sign"></span>
                    Tìm theo giới tính
                </label>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <input name="searchString" class="form-control me-1" type="search" placeholder="Tìm kiếm" aria-label="Tìm kiếm" value="@ViewData["searchString"]" />
                </div>
                <div class="col-md-4">
                    <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                </div>
            </div> 
        </form>
    </div>
    <div class="col-md-6">
        <a asp-action="Index" asp-controller="SinhViens">Trở về danh sách đầy đủ</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sdt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTkNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaLopNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTkNavigation.IdTk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLopNavigation.MaLop)
            </td>
            <td>
                <button class="btn btn-primary edit-btn" data-id="@item.MaSv">Sửa</button>
                <button class="btn btn-primary"><a asp-action="QuanLy" asp-route-id="@item.MaSv">Quản lý</a></button>
                <button class="btn btn-danger delete-btn" data-id="@item.MaSv">Xóa</button>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function() {
        // Xử lý sửa
        $('.edit-btn').click(function() {
            var id = $(this).data('id');
            $.get(`/SinhViens/Edit/${id}`, function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Sửa thông tin');
                $('#actionModal').modal('show');
            });
        });

        // Xử lý nút Create
        $('.create-btn').click(function() {
            $.get('/SinhViens/Create', function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Thêm mới');
                $('#actionModal').modal('show');
            });
        });

        // Xử lý xóa
        $('.delete-btn').click(function() {
            var id = $(this).data('id');
            $.get(`/SinhViens/Delete/${id}`, function(data) {
                $('#modalBody').html(data);
                $('#actionModal .modal-title').text('Xác nhận xóa');
                $('#actionModal').modal('show');
            });
        });
    });
</script>